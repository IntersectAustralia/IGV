<igv_plugin api_version="alpha" plugin_version="1.0" name="BEDTools"
            id="org.broadinstitute.igv.plugin.awk">
    <tool name="awk" path="/usr/bin/awk">
        <default>
            <arg name="Arguments" cmd_arg="" type="text" default=""/>
            <arg name="Track" cmd_arg="" type="feature_track" format="bed"/>
            <parser format="bed"/>
        </default>

        <command name="Arbitrary Input" cmd="">
            <!-- Input field "long text" provides a larger area for the user to type.
             Also, the input is NOT split by spaces-->
            <arg name="Arguments" cmd_arg="" type="longtext" default="{print}"/>
            <arg name="Track" cmd_arg="" type="feature_track" format="bed"/>
        </command>
        <command name="Filter by size" cmd="">
            <!--
                output: optional, default true
                    If true this argument is written to the command line
                    If false it isn't. This is so we can feed inputs to a different command
            -->
            <arg name="Minimum" type="text" id="min" output="false"/>
            <arg name="Maximum" type="text" id="max" output="false"/>
            <!--
                We reference the min/max using the $(variable name)
            -->
            <arg name="Track" cmd_arg="{diff=$3-$2; if (diff &gt;= $min &amp;&amp; diff &lt;= $max) print;}"
                 type="feature_track" format="bed"/>
        </command>

    </tool>
</igv_plugin>